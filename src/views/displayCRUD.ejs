<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>display crud</title>
    <style>
        table, th, td {
          border:1px solid black;
          text-align: center;
        }
        .btn-edit {
            border: none;
            outline: none;
            background: orange;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
        .btn-delete {
            border: none;
            outline: none;
            background: #ff0023;
            height: 25px;
            width: 60px;
            border-radius: 3px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <table>
        <tr>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Action</th>
        </tr>

        <% for(let i=0; i < userData.length; i++) 
            { %>
                <tr>
                    <td><%= userData[i].email %></td>
                    <td><%= userData[i].firstName %></td>
                    <td><%= userData[i].lastName %></td>
                    <td><%= userData[i].address %></td>
                    <td>
                        <a href="/edit-crud?id=<%= userData[i].id %>"class="btn-edit" type="button">Edit</a>
                        <a href="/delete-crud?id=<%= userData[i].id %>" class="btn-delete" type="button">Delete</a>
                    </td>
                </tr>
            <% } 
        %>

    </table>
</body>
</html>